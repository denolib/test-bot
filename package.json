{
  "name": "deno-test-bot",
  "version": "1.0.0",
  "description": "Bot that automatically runs deno tests",
  "author": "Kevin (Kun) \"Kassimo\" Qian <kevinkassimo@gmail.com>",
  "license": "MIT",
  "repository": "https://github.com//test-bot.git",
  "homepage": "https://github.com//test-bot",
  "bugs": "https://github.com//test-bot/issues",
  "keywords": [
    "probot",
    "github",
    "probot-app"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon --exec \"npm start\"",
    "start": "probot run ./lib/index.js",
    "lint": "standard **/*.ts --fix",
    "test": "jest && standard **/*.ts",
    "test:watch": "jest --watch --notify --notifyMode=change --coverage"
  },
  "dependencies": {
    "@types/nock": "^9.3.0",
    "nock": "^10.0.0",
    "probot": "^7.2.0",
    "rimraf": "^3.0.0",
    "simple-git": "^3.5.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.0",
    "@types/node": "^12.7.3",
    "@types/rimraf": "^2.0.2",
    "eslint-plugin-typescript": "^0.14.0",
    "jest": "^24.0.0",
    "nodemon": "^1.17.2",
    "smee-client": "^1.0.2",
    "standard": "^12.0.1",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.1",
    "typescript-eslint-parser": "^22.0.0"
  },
  "engines": {
    "node": ">= 8.3.0"
  },
  "standard": {
    "parser": "typescript-eslint-parser",
    "env": [
      "jest"
    ],
    "plugins": [
      "typescript"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
